{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CategoryList",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "integer" },
      "name": { "type": "string" },
      "parentCategory": {
        "anyOf": [
          { "type": "null" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" },
              "parentCategory": { "type": ["object", "null"] }
            },
            "required": ["id", "name"]
          }
        ]
      }
    },
    "required": ["id", "name"],
    "additionalProperties": false
  }
}
