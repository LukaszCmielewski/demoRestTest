{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BorrowList",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "isbn": {
            "type": "string",
            "pattern": "^(\\d{9}[\\dX]|\\d{13})$"
          },
          "publicationYear": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 9999
          },
          "edition": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "coverImageUrl": {
            "type": "string",
            "format": "uri"
          },
          "language": {
            "type": "string"
          },
          "publisher": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "contactInfo": {
                "type": "string"
              }
            },
            "required": ["id", "name", "address", "contactInfo"],
            "additionalProperties": false
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "biography": {
                  "type": "string"
                }
              },
              "required": ["id", "firstName", "lastName", "biography"],
              "additionalProperties": false
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "parentCategory": {
                  "type": "string"
                }
              },
              "required": ["id", "name", "parentCategory"],
              "additionalProperties": false
            }
          },
          "available": {
            "type": "boolean"
          }
        },
        "required": [
          "id", "title", "isbn", "publicationYear", "edition",
          "summary", "coverImageUrl", "language", "publisher",
          "authors", "categories", "available"
        ],
        "additionalProperties": false
      },
      "member": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string",
            "pattern": "^\\d{1,3}-?\\d{1,4}[\\d-\\.]*$"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "registrationDate": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "id", "firstName", "lastName", "address", "phone",
          "email", "registrationDate"
        ],
        "additionalProperties":
